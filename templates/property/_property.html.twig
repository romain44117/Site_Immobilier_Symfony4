<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ asset('images/properties/maison.jpg') }}" alt="card-img-top" style="width: 100%; height: auto">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id})}}">
                {{ property.name }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }}mÂ² - {{ property.city }}({{ property.postalCode }}</p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ property.price }}$
        </div>
    </div>
</div>